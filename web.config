<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="PythonHandler" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified"/>
    </handlers>
    <httpPlatform processPath="%PYTHON_PATH%"
                  arguments="%PYTHON_SCRIPT_PATH% runserver --settings=config.settings.azure_production 0.0.0.0:%HTTP_PLATFORM_PORT%"
                  stdoutLogEnabled="true"
                  stdoutLogFile="%HOME%\LogFiles\python.log">
      <environmentVariables>
        <environmentVariable name="DJANGO_SETTINGS_MODULE" value="config.settings.azure_production" />
      </environmentVariables>
    </httpPlatform>
  </system.webServer>
</configuration> 